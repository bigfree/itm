{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "module": "ESNext",
        "jsx": "react-jsx",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true,
        // Paths
        "paths": {
            "@/*": [
                "./src/*",
                "./dist/*",
                ""
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@clients/*": [
                "src/clients/*"
            ],
            "@common/*": [
                "src/common/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@configs/*": [
                "src/configs/*"
            ],
            "@graphql/*": [
                "src/graphql/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@public/*": [
                "public/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@stores/*": [
                "src/stores/*"
            ],
            "@themes/*": [
                "src/themes/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}
